---
import Layout from "@components/Layout.astro";
import { getCollection } from "astro:content";

const data = await getCollection("resources");
---

<Layout title="links">
  <p>
    A collection of resources I found interesting or helpful enough to keep.
  </p>
  {
    data.map((entry) => (
      <>
        <h2>{entry.data.name}</h2>
        {entry.data.links.map(({ name, description, href }) => (
          <>
            <a {href} class="link" target="_blank" rel="noreferrer">
              {name}
            </a>
            <p>{description}</p>
          </>
        ))}
      </>
    ))
  }
</Layout>
