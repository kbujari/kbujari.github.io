---
export interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time class={className} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "long",
      day: "2-digit",
    })
  }
</time>
