---
import Nav from "@components/Nav.svelte";
import { SITE } from "@consts";

import "@assets/styles/global.css";

interface LayoutProps {
  title?: string;
  author?: string;
  description?: string;
}

interface Props extends LayoutProps {
  children: any; // Force something to be passed to slot
  frontmatter?: LayoutProps; // Typed markdown frontmatter
}

const {
  title,
  author = SITE.author,
  description = SITE.description,
} = Astro.props.frontmatter || Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta property="locale" content="en_US" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title ? `${title} :: kleidi.ca` : "kleidi.ca"}</title>
    <meta name="author" content={author} />
    <meta name="description" content={description} />

    <link
      rel="preload"
      as="font"
      href="/w95fa.woff2"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body
    class="text-lg md:text-xl bg-neutral-900 text-stone-400 text-fg font-pixel"
  >
    <div class="px-4 mx-auto max-w-4xl">
      <Nav />
      <main class:list={[Astro.props.frontmatter ? "[&_a]:link" : "", "mt-4"]}>
        <slot />
      </main>
    </div>
  </body>
</html>
